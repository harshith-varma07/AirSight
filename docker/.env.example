# AirSight Production Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_ROOT_PASSWORD=airsight_root_secure_password_2024
DB_USER=airsight_user
DB_PASSWORD=airsight_secure_password_2024
DB_PORT=3307

# Application Configuration
APP_PORT=8080
LOG_LEVEL=INFO
SHOW_SQL=false

# Redis Configuration
REDIS_PORT=6379

# Nginx Configuration (for production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# External API Configuration
# Get your API key from https://openaq.org/
OPENAQ_API_KEY=your_openaq_api_key_here

# Twilio SMS Configuration (Optional - leave empty to disable SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Environment Configuration
ENVIRONMENT=production
TZ=UTC

# Security Configuration (Generate secure keys for production)
JWT_SECRET=your_secure_jwt_secret_key_at_least_32_chars
ENCRYPTION_KEY=your_secure_encryption_key_32_chars

# JVM Memory Configuration
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -Djava.security.egd=file:/dev/./urandom

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
