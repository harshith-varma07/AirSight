# Environment variables for Docker Compose
# Copy this file to .env in the docker directory and modify as needed

# Database Configuration
DB_ROOT_PASSWORD=airsight_root_secure_password_2024
DB_USER=airsight_user
DB_PASSWORD=airsight_secure_password_2024
DB_PORT=3307

# Application Configuration
APP_PORT=8080
LOG_LEVEL=INFO
SHOW_SQL=false

# Redis Configuration
REDIS_PORT=6379

# Nginx Configuration (for production)
NGINX_PORT=80
NGINX_SSL_PORT=443

# OpenAQ API (get from https://openaq.org/)
OPENAQ_API_KEY=your_openaq_api_key_here

# Twilio Configuration (for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Production optimizations
JAVA_OPTS=-Xmx1g -Xms512m -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
